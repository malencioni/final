<style>
  body, html {
      height:100%;
      margin:0;
  }
</style>
<div class="container box-float">


<h1>Login</h1>
<% if @new_guy_message.nil? %>
<% else %>
<h5 class="error-code"><%=@new_guy_message%></h5>
<%end%>
<% if @you_exist_message.nil? %>
<% else %>
<h5 class="error-code"> <%=@you_exist_message%></h5>
<%end%>

<form action="/logins/create" method="POST">
  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" placeholder="name@example.com" name="email">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password">
  </div>
  <span>
  <button type="submit" class="btn btn-primary">Sign In</button>
  <a href="/users/new" class="btn btn-primary btn-grey"   style="margin-right: 0.2rem;">Sign Up</a>
  </span>
</form>
