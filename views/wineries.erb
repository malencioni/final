<style>
  body, html {
      height:100%;
      margin:0;
  }
</style>

<% @wineregion_count = 1 %>
<div class="container">
    <div class="caption">
        <div class="container">
            <div class="row justify-content-center">
            <h1 class="fade-in cursive">Pick Your Region, Find Your Winery</h1>
            </div>
            <div class="row justify-content-center">
                <% for region in @regions_table %>
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="font_less_thin btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <%= region[:description]%>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <% for winery in @wineries %>
                                <% if winery[:reid] == @wineregion_count then%>
                                    <a class="dropdown-item" href="/wineries/<%= winery[:wid] %>"><%= winery[:name] %></a>
                                <%end%>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    <% @wineregion_count =  @wineregion_count + 1 %>
                <% end %>
            </div>
        </div>
    </div>
</div>
